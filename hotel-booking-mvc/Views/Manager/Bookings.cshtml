@model PaginationResponse<IEnumerable<ManagerBookingDto>>
@{
	ViewData["Title"] = "Bookings";
}
<style>
	.page-link {
		color: #2067A1;
	}

	.page-link:hover {
		color: #2067A1;
	}

	.active{
		color: #ffffff;
		background: #2067A1;
	}

	.active:hover{
		color: #ffffff;
		background: #2067A1;
	}

</style>
<div class="container-fluid mt-5 p-3">
	<div class="card">
		<div class="card-body">	
			<div class="row">
				<div class="col">
					<div class="py-2 border-bottom my-3">
						<h1 class="fs-3">Bookings</h1>
					</div>
				</div>
			</div>
			<div id="transaction mb-5">
                    <div id="search-bar-row">
                        <div class="d-sm-flex d-md-flex d-lg-flex justify-content-between flex-nowrap">
                            <div id="search-bar-row">
                                <div class="first-col">
                                    <form class="d-none d-sm-none d-sm-flex d-md-flex d-lg-flex" >
                                        <img src="~/images/strawberry menu.png" style="height:20px">
                                        <div class="bg-#2067A1; px-4">
                                            <input type="text" id="searchquery" name="searchquery"  Placeholder="Search by Name">
                                            <button type="submit" class="btn"><i class='bx bx-search'></i></button>
                                        </div>
                                    </form>
                                </div>
						    </div>
						</div>
					</div>
            </div>
			<div class="row">
				<div class="col">
					<table class="table table-striped table-bordered shadow rounded">
						<thead class="text-muted rounded-top">
							<tr class="rounded-top">
								<th scope="col">CUSTOMER NAME</th>
								<th scope="col">HOTEL</th>
								<th scope="col">SERVICE</th>
								<th scope="col">CHECKED IN</th>
								<th scope="col">CHECKED OUT</th>
							</tr>
						</thead>

						<tbody>
							@{
								foreach (var booking in Model.PageItems)
								{

									<tr>
										<td>@booking.CustomerName</td>
										<td>@booking.Hotel</td>
										<td>@booking.Service</td>
										<td>@booking.CheckedIn.ToShortDateString()</td>
										<td>@booking.CheckedOut.ToShortDateString()</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
				<nav aria-label="Page navigation example">
					<ul class="pagination justify-content-center">
						@{
							for (var i = 1; i <= @Model.NumberOfPages; i++)
							{
								if (Model.CurrentPage == i)
								{
									<li class="page-item"><a class="page-link active" id="pageButton" asp-route-pageNumber=@i>@i <span class="sr-only">(current)</span></a></li>
								}
								else
								{
									<li class="page-item"><a class="page-link" id="pageButton" asp-route-pageNumber=@i>@i</a></li>
								}
							}
						}
					</ul>
				</nav>
			</div>          
            
		</div>
	</div>
</div>